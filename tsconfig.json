{
  "compilerOptions": {
    "noImplicitAny": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node", "reflect-metadata"
    ],
    "lib": [
      "es6", "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}